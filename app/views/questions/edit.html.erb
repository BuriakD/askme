<div class="container">
  <h2 class="title-lg, mb-md">Update question <%= @question.id %></h2>

  <%= form_with model: @question do |form| %>
    <p> <%= form.text_area :body, rows:5, class: 'form_text_area' %> </p>

    <h1 class="mt-md"> <%= form.label :user_id, class: 'form_text_field'%> </h1>

    <p> <%= form.text_field :user_id%> </p>

    <p class="mt-md"> <%= form.submit 'Update', class:  'button button-main'%> </p>
  <% end %>
</div>